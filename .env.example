# ============================================
# AWS 설정 (CI/CD용)
# ============================================
AWS_ACCOUNT_ID=123456789012
AWS_REGION=ap-northeast-2
IMAGE_TAG=latest

# ============================================
# Database (RDS 정보 입력)
# ============================================
SPRING_DATASOURCE_URL=jdbc:mariadb://[RDS-엔드포인트]:3306/bizsync
SPRING_DATASOURCE_USERNAME=admin
SPRING_DATASOURCE_PASSWORD=your_password

# ============================================
# JWT
# ============================================
JWT_SECRET=your_very_long_secret_key_at_least_32_chars
JWT_EXPIRATION_MS=3600000
JWT_REFRESH_EXPIRATION_MS=604800000

# ============================================
# URLs
# ============================================
APP_CORS_ALLOWED_ORIGINS=http://[EC2-IP],https://[도메인]
VITE_API_BASE_URL=http://[EC2-IP]:8080/api
VITE_WS_URL=ws://[EC2-IP]:8080/ws

# ============================================
# Admin Account
# ============================================
ADMIN_EMAIL=admin@bizsync.com
ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY_AFTER_DEPLOYMENT
